---
import { Image } from "astro:assets"
interface Origin {
    name: string,
    url: string,
}
interface CharactersInterface{
    id: number,
    name: string,
    status: string,
    species: string,
    type: string,
    gender: string,
    origin: Origin,
    image: string,
}


const response = await fetch('https://rickandmortyapi.com/api/character')
const data = await response.json();
const characters: CharactersInterface[] = data.results
---




    <div class="container mx-auto gap-6 bg-purple-800">
        <div class="grid grid-cols-4 p-1 m-1 gap-2 bg-purple-850">
            {characters.map((character)=>(
                <div class="justify-items-center  bg-purple-900 text-white font-bold rounded-2xl p-1 mt-1 mb-1 text-center items-center justify-center">
                    <div class="flex justify-center"> <Image class="rounded-full" src={character.image} alt={character.name} width={300} height={300}/></div>
                    <h2 class="text-xl text-green-200"> [{character.status}]</h2>
                    <h2 class="text-xl">Nombre: {character.name}</h2>
                    <h2 class="text-xl">Especie: {character.species}</h2>
                    <h2 class="text-xl">Genero: {character.gender}</h2>
                    <h2 class="text-xl">Origen: <a href={character.origin.url}>{character.origin.name}</a></h2>
                    <div class="pb-1 pt-1 mt-1 mb-1 max-w-xs mx-auto rounded-full bg-green-400 text-black text-lg"><a href="/">Ver detalles</a></div>
                </div>
            ))}
        </div>
    </div>
    
